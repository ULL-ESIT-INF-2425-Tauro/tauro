{
  "name": "@tauro/ms-auth",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "migration:generate": "bun run auth:generate && bun run drizzle:generate",
    "migration:migrate": "bun run drizzle:migrate",
    "migration:drop": "bun run drizzle:drop",
    "drizzle:generate": "bun run drizzle-kit generate --config=drizzle.config.ts",
    "drizzle:migrate": "bun run drizzle-kit migrate --config=drizzle.config.ts",
    "drizzle:drop": "bun run drizzle-kit drop --config=drizzle.config.ts",
    "auth:generate": "bun run @better-auth/cli@latest generate --config ./src/lib/auth.ts --output ./src/schemas/auth-schema.ts",
    "auth:secret": "bun run @better-auth/cli@latest secret",
    "clean": "rm -rdf ./node_modules && rm -rdf ./dist",
    "check:knip": "bun run knip",
    "lint": "bun run eslint --fix .",
    "format": "bun run prettier --write .",
    "check:lint": "bun run eslint .",
    "check:format": "bun run prettier --check ."
  },
  "type": "module",
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "better-auth": "^1.2.3",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.7.4",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "knip": "^5.45.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.26.1"
  }
}